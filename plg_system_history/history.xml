<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" method="upgrade" group="system">
	<name>plg_system_history</name>
	<author>Chris French</author>
	<creationDate>April 2012</creationDate>
	<copyright>Copyright (C) 2005 - 2012 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>cfrench@dioscouri.com</authorEmail>
	<authorUrl>www.dioscouri.com</authorUrl>
	<version>2.5.0</version>
	<description>Tracks user history in session</description>
	<files>
		<filename plugin="history">history.php</filename>
		
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_history.ini</language>
		<language tag="en-GB">en-GB.plg_system_history.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field
					name="amount"
					type="list"
					default="3"
					label="Number to store"
					description="This Number must be be greater than the number in the items to display in the module">
					<option
						value="1">1</option>
					<option
						value="2">2</option>
						<option
						value="3">3</option>
					<option
						value="4">4</option>
						<option
						value="5">5</option>
				</field>
				<field
					name="duplicates"
					type="radio"
					label="Store Duplciates"
					description=""
					default="0">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>

			</fieldset>

		</fields>
	</config>
</extension>
